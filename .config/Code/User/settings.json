{
  "workbench.iconTheme": "material-icon-theme",
  "security.workspace.trust.untrustedFiles": "open",
  "terminal.integrated.shell.linux": "/usr/bin/bash", // For Linux
  "terminal.integrated.profiles.linux": {
    "bash": {
      "path": "/usr/bin/bash"
    },
    "zsh": {
      "path": "/usr/bin/zsh"
    },
    "fish": {
      "path": "/usr/bin/fish"
    },
    "tmux": {
      "path": "/usr/bin/tmux",
      "icon": "terminal-tmux"
    },
    "pwsh": {
      "path": "/usr/bin/pwsh",
      "icon": "terminal-powershell"
    },
    "kitty": {
      "path": "/usr/bin/kitty",
      "icon": "terminal-linux"
    }
  },
  "terminal.integrated.defaultProfile.linux": "bash",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "editor.codeActionsOnSave": { "source.fixAll.eslint": "always" },
  "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  "editor.minimap.enabled": false,
  "editor.wordWrap": "on",
  "editor.renderWhitespace": "none",
  "editor.renderControlCharacters": false,
  "notebook.formatOnSave.enabled": true,
  "eslint.format.enable": true,
  "terminal.integrated.gpuAcceleration": "on",
  "files.autoSaveDelay": 30000,
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "explorer.confirmDragAndDrop": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "explorer.confirmDelete": false,
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "css.format.braceStyle": "expand",
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/public/*/**": true
  },
  "github.copilot.selectedCompletionModel": "gpt-4o-copilot",
  "gitlens.ai.model": "gemini:gemini-2.0-flash",
  "gitlens.ai.vscode.model": "copilot:gemini-2.0-flash",
  "redhat.telemetry.enabled": true,
  "terminal.integrated.suggest.enabled": true,
  "files.autoSave": "afterDelay",
  "tailwindCSS.experimental.configFile": null,
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "workbench.colorTheme": "Catppuccin Macchiato",
}
